<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

        <!--TOP CONTENT-->
        <TextView
                android:text="Events and Promotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/eventText"
                style="@style/TitleText" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/sample4" android:id="@+id/imageView3"
                android:layout_height="264dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/eventText" android:layout_marginTop="12dp"/>


        <!--MIDDLE CONTENT-->
            <TextView
                    android:text="Trending Art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/trendingText" style="@style/TitleText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
            <HorizontalScrollView
                    style="@style/Slider"
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/trendingText"
                    android:layout_marginTop="12dp">
                <LinearLayout
                        android:id="@+id/horizontalSlider"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:id="@+id/cardArt"
                            style="@style/CardArt"
                            android:orientation="vertical">
                        <ImageView
                                style="@style/CardArtImage"
                                android:id="@+id/imageView"
                                app:srcCompat="@mipmap/sample"/>
                        <TextView
                                style="@style/ArtText"
                                android:text="SpecialArt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"/>
                        <TextView
                                style="@style/DecorationText"
                                android:text="Creator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:weightSum="100">
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="4.2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"/>
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    android:id="@+id/imageView2"/>
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="300 Reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:gravity="right"
                                    android:layout_weight="98"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/cardArt"
                            style="@style/CardArt"
                            android:orientation="vertical">
                        <ImageView
                                style="@style/CardArtImage"
                                android:id="@+id/imageView"
                                app:srcCompat="@mipmap/sample1"/>
                        <TextView
                                style="@style/ArtText"
                                android:text="SpecialArt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"/>
                        <TextView
                                style="@style/DecorationText"
                                android:text="Creator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:weightSum="100">
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="4.2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"/>
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    android:id="@+id/imageView2"/>
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="300 Reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:gravity="right"
                                    android:layout_weight="98"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/cardArt"
                            style="@style/CardArt"
                            android:orientation="vertical">
                        <ImageView
                                style="@style/CardArtImage"
                                android:id="@+id/imageView"
                                app:srcCompat="@mipmap/sample2"/>
                        <TextView
                                style="@style/ArtText"
                                android:text="SpecialArt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"/>
                        <TextView
                                style="@style/DecorationText"
                                android:text="Creator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:weightSum="100">
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="4.2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"/>
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    android:id="@+id/imageView2"/>
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="300 Reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:gravity="right"
                                    android:layout_weight="98"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/cardArt"
                            style="@style/CardArt"
                            android:orientation="vertical">
                        <ImageView
                                style="@style/CardArtImage"
                                android:id="@+id/imageView"
                                app:srcCompat="@mipmap/sample3"/>
                        <TextView
                                style="@style/ArtText"
                                android:text="SpecialArt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"/>
                        <TextView
                                style="@style/DecorationText"
                                android:text="Creator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:weightSum="100">
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="4.2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"/>
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    android:id="@+id/imageView2"/>
                            <TextView
                                    style="@style/DecorationText"
                                    android:text="300 Reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:gravity="right"
                                    android:layout_weight="98"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!--BOTTOM CONTENT-->
            <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@mipmap/sample4" android:id="@+id/imageView4"
                    android:layout_height="264dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>